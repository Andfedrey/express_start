<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>
<a class="btn btn-sm btn-primary" href="/api/books/addBook">Добавить книгу</a>

        <table class="table table-striped table-sm  mt-3">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Заголовок</th>
                <th scope="col">Описание</th>
                <th scope="col">Автор</th>
            </tr>
            </thead>
            <tbody>
    
                <% books.map((el, idx) => {  %>
                    <tr data-href="/">
                        <th scope="row"><%= idx +1 %></th>
                        <td><%= el.title %></td>
                        <td><%= el.description %></td>
                        <td><%= el.authors %></td>
                        <td><%= el.authors %></td>
                        <td class="text-right">
                            <a class="btn btn-sm btn-success" href="/api/books/<%= el._id %>">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-primary" href="/api/books/updateBook/<%= el._id %>">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <form action="/api/books/<%= el._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
    
            </tbody>
        </table>





<%- include('../port/layout-end') %>
