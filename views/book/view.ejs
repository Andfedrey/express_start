<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>
<div class="row">
  <div class="col-sm-8">
      <div class="card">
          <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text"><%= book.desc %></p>
              <div class="text-right">
                  <p class="text-left">
                    <%= book.description %>
                  </p>
                  <a class="btn btn-sm btn-primary" href="/api/books/updateBook/<%= book._id %>">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
                <form action="/api/books/<%= book._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-sm btn-danger">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </button>
                </form>
              </div>
          </div>
      </div>
  </div>
</div>

<%- include('../port/layout-end') %>

